{
  "main": "lib/src/index.js",
  "scripts": {
    "start": "node lib/src/index.js",
    "compile": "tsc",
    "build": "npm run build:clean && npm run compile",
    "build:clean": "rm -rf ./lib",
    "build:watch": "tsc --watch",
    "lint": "eslint --ext .ts .",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run test-rules && npm run test-cloud-functions",
    "test-firestore": "mocha -r ts-node/register --reporter spec test/rules.ts",
    "test-rules": "firebase emulators:exec --only firestore 'npm run test-firestore --exit'",
    "test-cloud-functions": "mocha -r ts-node/register --reporter spec test/**/*.ts --exclude test/rules.ts --exit"
  },
  "name": "functions",
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@genkit-ai/ai": "^0.5.0-rc.8",
    "@genkit-ai/core": "^0.5.0-rc.8",
    "@genkit-ai/dotprompt": "^0.5.0-rc.8",
    "@genkit-ai/firebase": "^0.5.0-rc.8",
    "@genkit-ai/flow": "^0.5.0-rc.8",
    "@genkit-ai/googleai": "^0.5.0-rc.8",
    "@google/generative-ai": "^0.10.0",
    "express": "^4.19.2",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1",
    "genkit": "^0.5.0-rc.8",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.2",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.4.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.2.0",
    "mocha": "^10.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "private": true
}
